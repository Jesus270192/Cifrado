<Window x:Class="GetJasonValues.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetJasonValues"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label>Campos por coma</Label>
            <ComboBox></ComboBox>
            <Label>campos del json a filtrar</Label>
            <ComboBox></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label>JSON ORIGEN</Label>
            <RichTextBox  x:Name="rtbJSONOriginal" Height="250"/>
            <Button Click="Button_Click">EJECUTAR</Button>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label>JSON RESULTANTE</Label>
            <RichTextBox  Height="250"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Label>CAMPOS SEPARADOS</Label>
            <RichTextBox  Height="250"/>
        </StackPanel>
    </Grid>
</Window>
